<view class='country-list'>
    <block wx:for="{{countrylist}}">
        <view bindtap="gotodetails" class='img-box' data-id="{{item.Id}}">
            <image data-id="{{item.Id}}" class='country-list-img' src="{{item.HomeImage}}"></image>
            <view class="gotodetails">
                
            </view>
            <view class="smallbox">
              <text class="gotodetails-name">{{item.Country_ZH}}</text>
                <text class="gotodetails-name1">查看详情</text>
            </view>
        </view>
    </block>
</view>